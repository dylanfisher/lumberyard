<div class="site-container">
  <div class="container-fluid">
    <div class="row">
      <div class="col">
        Find me in templates/list-collections.liquid
      </div>
    </div>
    <div class="row">
      {% for collection in collections %}
        <div class="col-md-4">
          <a href="{{ collection.url }}" class="blank-link">
            <img src="{{ collection.featured_image | image_url: width: 1000 }}" alt="{{ collection.title | escape }}" />
            <h2>{{ collection.title }}</h2>
            <div>{{ collection.description }}</div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
