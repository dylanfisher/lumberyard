<div class="site-container">
  <div class="container-fluid">
    <div class="row">
      <div class="col">
        Find me in sections/main-list-collections.liquid
      </div>
    </div>
    <div class="row">
      {% paginate collections by 50 %}
        {% for collection in collections %}
          <div class="col-md-4">
            <a href="{{ collection.url }}" class="blank-link">
              <img src="{{ collection.featured_image | image_url: width: 1000 }}" alt="{{ collection.title | escape }}" />
              <h2>{{ collection.title }}</h2>
              <div>{{ collection.description }}</div>
            </a>
          </div>
        {% endfor %}
        {{ paginate | default_pagination }}
      {% endpaginate %}
    </div>
  </div>
</div>
